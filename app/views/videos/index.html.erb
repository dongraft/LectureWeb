<h1>Listing videos</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Youtube ID</th>
    <th>User mail</th>
    <th>Name</th>
    <th>Course</th>
    <th>Professor</th>
    <th>Semester</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td><%= video.id %></td>
    <td><%= video.yt_id %></td>
    <td><%= video.user_mail %></td>
    <td><%= video.name %></td>
    <td><%= video.course %></td>
    <td><%= video.professor %></td>
    <td><%= video.semester %></td>
    <td><%= link_to 'Show', video %></td>
    <td><%= link_to 'Edit', edit_video_path(video) %></td>
    <td><%= link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

